{
  "name": "boorium",
  "version": "0.0.0",
  "description": "beautiful booru client",
  "main": "lib/index.js",
  "scripts": {
    "test": "standard",
    "build": "babel -D -d lib src",
    "buildrun": "npm run build && npm run run",
    "run": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/boorium/boorium.git"
  },
  "keywords": [
    "booru",
    "client",
    "standalone",
    "electron"
  ],
  "author": "ivan k <ivan@sq10.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boorium/boorium/issues"
  },
  "homepage": "https://github.com/boorium/boorium#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^7.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "electron-prebuilt": "^1.4.13",
    "eslint": "^3.14.1",
    "eslint-plugin-babel": "^4.0.1",
    "standard": "^8.6.0"
  },
  "dependencies": {
    "babel-preset-es2015-node5": "^1.2.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "babel"
    ],
    "rules": {
      "arrow-parens": 0,
      "babel/arrow-parens": [
        2,
        "always"
      ]
    }
  }
}
